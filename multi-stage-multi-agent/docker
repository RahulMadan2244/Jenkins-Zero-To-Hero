pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'my-ubuntu-image'
        CONTAINER_NAME = 'my-ubuntu-container'
    }
    
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t $DOCKER_IMAGE ."
                }
            }
        }
        
        stage('Run Docker Container') {
            steps {
                script {
                    // Run Docker container from the built image
                    sh "docker run -d --name $CONTAINER_NAME $DOCKER_IMAGE tail -f /dev/null"
                }
            }
        }
    }
    
    post {
        always {
            // Clean up: stop and remove the container after the pipeline execution
            script {
                sh "docker stop $CONTAINER_NAME"
                sh "docker rm $CONTAINER_NAME"
            }
        }
    }
}
